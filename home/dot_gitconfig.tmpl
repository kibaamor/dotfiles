[user]
    name = {{ .git_username }}
    email = {{ .git_useremail }}

[init]
    defaultBranch = main

[push]
    default = simple

[pull]
    rebase = true

[core]
    editor = vim
    pager = delta
    quotepath = false

    safecrlf = warn
{{ if eq .chezmoi.os "windows" }}
    autocrlf = true
{{ else }}
    autocrlf = input
{{ end }}

[gui]
    encoding = utf-8

[i18n "commit"]
    encoding = utf-8

[i18n]
    logoutputencoding = utf-8

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    side-by-side = true
    line-numbers = true
    relative-paths = true
    syntax-theme = Monokai Extended
    plus-style = "syntax #004d00"
    minus-style = "syntax #4d0000"
    line-numbers-plus-style = "#b8bb26"
    line-numbers-minus-style = "#fb4934"
    line-numbers-zero-style = "#665c54"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

{{ if not .personal -}}
[url "git@gitlab-ncsa.ubisoft.org:"]
    insteadof = https://gitlab-ncsa.ubisoft.org/

[http]
    proxy = http://ctu-net-mwg.ubisoft.org:3128

[https]
    proxy = http://ctu-net-mwg.ubisoft.org:3128
{{ end -}}
